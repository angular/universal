{
  "compilerOptions": {
  	"target": "es5",
  	"module": "commonjs",
  	"declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  	"sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
  	"outDir": "compiled/ngc",
    "pretty": true,
    "stripInternal": false,
    "lib": ["es6", "dom"],
    "types": [
      "body-parser",
      "browserify",
      "express",
      "jasmine",
      "node",
      "through2"
    ],
    "paths": {
      "angular2-express-engine": [
        "./modules/express-engine"
      ],
      "angular2-platform-node": [
        "./modules/platform-node"
      ],
      "angular2-universal/browser": [
        "./modules/universal/browser"
      ],
      "angular2-universal/node": [
        "./modules/universal/node"
      ],
      "angular2-universal": [
        "./modules/universal"
      ],
      "angular2-hapi-engine": [
        "./modules/hapi-engine/src/index.ts"
      ]
    }
  },

  "files": [
    "gulpfile.ts",
    "custom_typings/xhr2.d.ts",
    "modules/express-engine/src/index.ts",
    "modules/grunt-prerender/tasks/index.ts",
    "modules/gulp-prerender/src/index.ts",
    "modules/hapi-engine/src/index.ts",
    "modules/universal-polyfills/src/zone-node/index.ts",
    "modules/universal-polyfills/src/dev.ts",
    "modules/universal-polyfills/src/ie.ts",
    "modules/universal-polyfills/src/browser.ts",
    "modules/universal-polyfills/src/node.ts",
    "modules/universal-polyfills/src/prod.ts",
    "modules/universal-polyfills/src/test.ts",
    "modules/universal-polyfills/src/zone-browser.ts",
    "modules/universal/src/node/index.ts",
    "modules/universal/src/browser/index.ts",
    "modules/platform-node/parse5.d.ts",
    "modules/universal/browser.ts",
    "modules/universal/typings.d.ts",
    "modules/universal/node.ts",
    "modules/webpack-prerender/src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false },
  "angularCompilerOptions": {
    "genDir": "compiled/ngfactory"
  }
}
