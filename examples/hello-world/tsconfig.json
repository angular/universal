{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "angular2-express-engine": [
        "../../modules/express-engine"
      ],
      "angular2-platform-node": [
        "../../modules/platform-node"
      ],
      "angular2-platform-node-dynamic": [
        "../../modules/platform-node-dynamic"
      ],
      "angular2-universal": [
        "../../modules/universal"
      ],
      "angular2-universal/browser": [
        "../../modules/universal/browser"
      ],
      "angular2-universal/node": [
        "../../modules/universal/node"
      ],
      "rxjs/*": [
        "./node_modules/rxjs-es/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
