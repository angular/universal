{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "pretty" : true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "types": [
      "node",
      "body-parser",
      "express"
    ],
    "paths": {
      "@angular/express-engine": [
        "../../modules/express-engine"
      ],
      "@angular/platform-node": [
        "../../modules/platform-node"
      ],
      "@angular/platform-node-dynamic": [
        "../../modules/platform-node-dynamic"
      ],
      "@angular/universal": [
        "../../modules/universal"
      ],
      "@angular/universal/browser": [
        "../../modules/universal/browser.ts"
      ],
      "@angular/universal/node": [
        "../../modules/universal/node.ts"
      ],
      "rxjs/*": [
        "./node_modules/rxjs-es/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
