{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es5", "dom"],
    "baseUrl": ".",
    "types": [
      "body-parser",
      "browserify",
      "core-js",
      "express",
      "jasmine",
      "node"
    ],
    "paths": {
      "angular2-express-engine": [
        "../../dist/express-engine"
      ],
      "angular2-universal-webpack-plugin": [
        "../../dist/webpack-prerender"
      ],
      "angular2-platform-node": [
        "../../dist/platform-node"
      ],
      "angular2-platform-node-dynamic": [
        "../../dist/platform-node-dynamic"
      ],
      "angular2-universal": [
        "../../dist/universal"
      ],
      "angular2-universal/browser": [
        "../../dist/universal/browser"
      ],
      "angular2-universal/node": [
        "../../dist/universal/node"
      ],
      "rxjs/*": [
        "./node_modules/rxjs-es/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "./src/app.browser.module.ts",
    "./src/app.node.module.ts"
  ],
  "angularCompilerOptions": {
    "basePath": ".",
    "genDir": "ngfactory",
    "skipMetadataEmit": false
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
