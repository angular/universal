{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../../dist/schematics",
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@nguniversal/*": ["../../*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "*/files/**/*"
  ],
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}
